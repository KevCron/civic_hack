 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/claim_layout">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Claim Title"
            android:id="@+id/claim_title_ET" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nature of Business"
            android:id="@+id/nature_of_business_ET"/>

    </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:hint="License Plate #"
             android:id="@+id/license_plate_ET"/>

     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:hint="Start mileage"
             android:id="@+id/start_mileage_ET"/>

     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:hint="End mileage"
             android:id="@+id/end_mileage_ET"/>

     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp">

         <EditText
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:hint="IPS Location"
             android:id="@+id/notes_ET"/>

     </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:id="@+id/submit_button"
        android:background="@color/DodgerBlue"
        android:textColor="@color/WhiteSmoke"
        android:onClick="submit"/>

</LinearLayout>
